@using SocialNetwork.Core.Application.ViewModels.Friendship;

@model SaveFriendshipViewModel

@{
    ViewData["Title"] = "Delete Friend";
}

<div class="row">

	<div class="col-6 offset-3">

		<div class="card">
			<div class="card-header">
				<h4>Seguro que desea eliminar a este amigo?</h4>
			</div>
			<div class="card-body">
				<form method="post" asp-controller="Friendships" asp-action="DeletePost">
					<input type="hidden" asp-for="Id" />
					<button type="submit" class="btn btn-danger">Eliminar</button>
					<a asp-controller="Friendships" asp-action="Index" class="btn btn-warning">Cancelar</a>
				</form>
			</div>
		</div>
	</div>


</div>
